{
  "name": "stample",
  "version": "0.0.1",
  "description": "Stample web clipper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edwardsilhol/stample-frontend-nextjs"
  },
  "scripts": {
    "build": "vite build",
    "build:v2": "cross-env MANIFEST_VERSION=2 run-s build",
    "build:all": "run-p build build:v2",
    "clear": "rm -rf dist/*",
    "clear:v2": "rm -rf dist/v2/",
    "clear:v3": "rm -rf dist/v3/",
    "watch": "vite build --watch --mode development --minify false",
    "watch:v2": "cross-env MANIFEST_VERSION=2 run-s watch",
    "watch:all": "run-p watch watch:v2",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/v2",
    "serve:chrome": "web-ext run -t chromium --start-url \"http://google.com/\" --source-dir ./dist/v3",
    "serve:all": "run-p serve:firefox serve:chrome",
    "pack:crx": "cross-env-shell crx pack dist/v3 -o $npm_package_name-$npm_package_version.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ cross-env-shell web-ext build --source-dir ./dist/v2 --filename $npm_package_name-$npm_package_version.xpi --overwrite-dest",
    "pack:all": "run-p pack:crx pack:xpi",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "type": "module",
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.6",
    "@hookform/resolvers": "^3.3.2",
    "@mozilla/readability": "^0.4.4",
    "@mui/icons-material": "^5.11.9",
    "@mui/lab": "5.0.0-alpha.149",
    "@mui/material": "^5.11.9",
    "@samrum/vite-plugin-web-extension": "^5.0.0",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.0.3",
    "async-mutex": "^0.4.0",
    "date-fns": "^2.29.3",
    "draft-js": "^0.11.7",
    "i18next": "^23.6.0",
    "jotai": "^2.1.0",
    "jsonld": "^8.1.1",
    "lodash": "^4.17.21",
    "masonic": "^3.7.0",
    "qs": "^6.11.2",
    "query-string": "^8.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-draft-wysiwyg": "^1.15.0",
    "react-hook-form": "^7.43.9",
    "react-i18next": "^13.3.1",
    "use-resize-observer": "^9.1.0",
    "webextension-polyfill": "^0.10.0",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@fontsource/material-icons": "^5.0.7",
    "@fontsource/roboto": "^5.0.8",
    "@mdx-js/react": "^2.3.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "^0.0.248",
    "@types/draft-js": "^0.11.10",
    "@types/jest": "29.5.6",
    "@types/node": "20.8.7",
    "@types/qs": "^6.9.7",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "@types/react-draft-wysiwyg": "^1.13.4",
    "@types/webextension-polyfill": "^0.10.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-loader": "^9.1.2",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "cypress": "^13.3.2",
    "eslint": "8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-storybook": "^0.6.10",
    "fs-extra": "11.1.1",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
